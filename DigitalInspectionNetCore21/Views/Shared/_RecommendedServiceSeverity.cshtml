@model DigitalInspectionNetCore21.Models.Orders.RecommendedService
@using DigitalInspectionNetCore21.Views.Helpers
@using DigitalInspectionNetCore21.Models.Orders

@switch (Model.Severity)
{
	case RecommendedServiceSeverity.IMMEDIATE:
		@RecommendedServiceHelpers.Immediate(true, false);
		break;
	case RecommendedServiceSeverity.MODERATE:
		@RecommendedServiceHelpers.Moderate(true, false);
		break;
	case RecommendedServiceSeverity.SHOULD_WATCH:
		@RecommendedServiceHelpers.Watch(true, false);
		break;
	case RecommendedServiceSeverity.MAINTENANCE:
		@RecommendedServiceHelpers.Maintenance(true, false);
		break;
	case RecommendedServiceSeverity.NOTES:
		@RecommendedServiceHelpers.Notes(true, false);
		break;
}
